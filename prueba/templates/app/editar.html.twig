    <div class="container">
        <div class="row" style="padding-top: 50px;">
            <div class="col-md-12 "> {# col-md-offset-2 #}
                {% if mensaje %}
                    <div class="alert alert-success" role="alert">
                      <a href="#" class="alert-link">{{ mensaje }}</a>
                    </div>
                {% endif %}
                <div class="text-center"><h2>Editar Usuario</h2> </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                    {{ form_start(form, { 'enctype':"multipart/form-data",  'attr' : {'role' : 'form'} }) }}
                        <div class="form-group">
                            {{ form_label(form.username)}}
                             {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.username)}}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.usernamecanonical)}}
                            {{ form_widget(form.usernamecanonical, { 'attr': {'class': 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.usernamecanonical)}}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email)}}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.email)}}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.emailcanonical)}}
                            {{ form_widget(form.emailcanonical, { 'attr': {'class': 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.emailcanonical)}}</span>
                        </div>      
                        <div class="form-group">
                            {{ form_label(form.enabled)}}
                            {{ form_widget(form.enabled, { 'attr': {'class': 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.enabled)}}</span>
                        </div>                                                                    
